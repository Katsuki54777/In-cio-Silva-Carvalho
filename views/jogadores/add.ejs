     <%-include('../cabecalho.ejs')%>
     <header>
        <h3>Adicionar Novo Jogador</h3>
      </header>
      <div class="content">
        <form id="form-instrumento" autocomplete="off" action="/Jogadores/addok" method="post">
          <div class="grid">
            <div>
              <label for="nome">Nome do Jogador</label>
              <input id="nome" name="nome" type="text" placeholder="Ex:bruno Rezende" required>
            </div>

            <div>
              <label for="nometi">Time</label>
              <select id="nometi" name="nometi" required>
                <option value="" disabled selected>Selecione o Time</option>
                <option>Sada Cruzeiro Vôlei</option>
                <option>Sesi Vôlei Bauru</option>
                <option>Praia Clube</option>
              </select>
            </div>

            <div>
              <label for="posicao">Posição</label>
              <select id="posicao" name="posicao" required>
                <option value="" disabled selected>Selecione o tipo</option>
                <option>Ponteiro</option>
                <option>Levantador</option>
                <option>Central</option>
                <option>Líbero</option>
              </select>
            </div>

            <div>
              <label for="altura">Altura(cm)</label>
              <input id="altura" name="altura" type="text" placeholder="Ex:180" required>
            </div>

            <div>
              <label for="idade">Idade(anos)</label>
              <input id="idade" name="idade" type="text" placeholder="Ex:25" required>
            </div>
          </div>


           <div class="field-help">Os campos com * são obrigatórios.</div>
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/jogadores/lst">Cancelar</a>
            <button type="submit" class="btn primary">Adicionar Marca</button>
          </footer>
        </form>
      </div>

      <%-include('../rodape.ejs')%>