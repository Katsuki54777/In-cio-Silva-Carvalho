<%-include('../cabecalho.ejs')%>
<section class="section">
    <div style="display:flex; align-items:end; justify-content:space-between; gap:16px; flex-wrap:wrap;">
        <div>
            <h2>Editar Time</h2>
            <p>Edite as informações do time</p>
        </div>
    </div>

    <div class="form-wrap" style="margin-top:24px;">
        <form action="/times/edt/<%= time._id %>" method="POST">
            <div class="form-group">
                <label for="nome">Nome do Time</label>
                <input type="text" id="nome" name="nome" value="<%= time.nome %>" required>
            </div>
            
            <div class="form-group">
                <label for="cidade">Cidade</label>
                <input type="text" id="cidade" name="cidade" value="<%= time.cidade %>" required>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn primary">Salvar Alterações</button>
                <a href="/times/lst" class="btn secondary">Cancelar</a>
            </div>
        </form>
    </div>
</section>
<%-include('../rodape.ejs')%>