     <header>
        <h3>Adicionar Novo Torneio</h3>
      </header>
      <div class="content">
        <form id="form-instrumento" autocomplete="off" action="/torneios/addok" method="post">
          <div class="grid">
            <div>
              <label for="nome">Nome do Torneio</label>
              <input id="nome" name="nome" type="text" placeholder="Ex: Campeonato Brasileiro" required>
            </div>

            <div>
              <label for="nometi">Time</label>
              <select id="nometi" name="nometi" required>
                <option value="" disabled selected>Selecione o Time</option>
                <option>Sada Cruzeiro Vôlei</option>
                <option>Sesi Vôlei Bauru</option>
                <option>Praia Clube</option>
              </select>
            </div>

            <div>
              <label for="jogo">Jogo</label>
              <select id="jogo" name="jogo" required>
                <option value="" disabled selected>Selecione o Jogo</option>
                <option>Vôlei</option>
              </select>
            </div>

            <div>
              <label for="periodo">Periodo</label>
                <input id="periodo" name="periodo" type="text" placeholder="Ex: 01/01/2024 - 31/12/2024" required>
            </div>
            <div>
              <label for="premiacao">Premiação</label>
              <input id="premiacao" name="premiacao" type="text" placeholder="Ex: 10000" required>
            </div>

            <div>
              <label for="status">Status</label>
              <input id="status" name="status" type="text" placeholder="Ex: Ativo" required>
            </div>
          </div>


           <div class="field-help">Os campos com * são obrigatórios.</div>
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/jogadores/lst">Cancelar</a>
            <button type="submit" class="btn primary">Adicionar Marca</button>
          </footer>
        </form>
      </div>

