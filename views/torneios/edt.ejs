<%-include('../cabecalho.ejs')%>
<section class="section">
    <div style="display:flex; align-items:end; justify-content:space-between; gap:16px; flex-wrap:wrap;">
        <div>
            <h2>Editar Torneio</h2>
            <p>Edite as informações do torneio</p>
        </div>
    </div>

    <div class="form-wrap" style="margin-top:24px;">
        <form action="/torneios/edt/<%= torneio._id %>" method="POST">
            <div class="form-group">
                <label for="nome">Nome do Torneio</label>
                <input type="text" id="nome" name="nome" value="<%= torneio.nome %>" required>
            </div>
            
            <div class="form-group">
                <label for="jogo">Jogo</label>
                <select name="jogo" id="jogo">
                    <option value="volei" <%= torneio.jogo === 'volei' ? 'selected' : '' %>>Vôlei</option>
                    <option value="Volei de praia" <%= torneio.jogo === 'Volei de praia' ? 'selected' : '' %>>Vôlei de Praia</option>
                </select>
            </div>

            <div class="form-group">
                <label for="periodo">Periodo</label>
                <input type="text" id="periodo" name="periodo" value="<%= torneio.periodo %>" required>
            </div>

            <div class="form-group">
                <label for="premiacao">Premiação</label>
                <input type="text" id="premiacao" name="premiacao" value="<%= torneio.premiacao %>" required>
            </div>

            <div class="form-group">
                <label for="status">Status</label>
                <input type="text" id="status" name="status" value="<%= torneio.status %>" required>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn primary">Salvar Alterações</button>
                <a href="/torneios/lst" class="btn secondary">Cancelar</a>
            </div>
        </form>
    </div>
</section>
<%-include('../rodape.ejs')%>